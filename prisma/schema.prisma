generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model AuthUser {
  id              BigInt        @id @default(autoincrement())
  role            Role          @unique
  passwordHash    String        @map("password_hash") @db.VarChar(255)
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt @map("updated_at")
  sessions        AuthSession[]
  authoredLetters Letter[]      @relation("AuthorLetters")
  receivedLetters Letter[]      @relation("RecipientLetters")

  @@map("auth_users")
}

model AuthSession {
  id           BigInt   @id @default(autoincrement())
  sessionToken String   @unique @map("session_token") @db.VarChar(64)
  userId       BigInt   @map("user_id")
  expiresAt    DateTime @map("expires_at")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  user         AuthUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([sessionToken])
  @@index([userId])
  @@index([expiresAt])
  @@map("auth_sessions")
}

model AuthLoginAttempt {
  id             BigInt    @id @default(autoincrement())
  ipAddress      String    @map("ip_address") @db.VarChar(45)
  failedAttempts Int       @default(0) @map("failed_attempts")
  lockedUntil    DateTime? @map("locked_until")
  lastAttemptAt  DateTime  @default(now()) @updatedAt @map("last_attempt_at")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  @@index([ipAddress])
  @@index([lockedUntil])
  @@map("auth_login_attempts")
}

enum Role {
  admin
  viewer
}

// 信件表：存储书信往来的核心内容
model Letter {
  id          BigInt    @id @default(autoincrement())
  title       String?   @db.VarChar(255)
  content     String    @db.Text
  authorId    BigInt    @map("author_id")
  recipientId BigInt    @map("recipient_id")
  writtenAt   DateTime? @map("written_at")
  isPublished Boolean   @default(true) @map("is_published")
  tags        String?   @db.VarChar(500)
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  author    AuthUser @relation("AuthorLetters", fields: [authorId], references: [id], onDelete: Cascade)
  recipient AuthUser @relation("RecipientLetters", fields: [recipientId], references: [id], onDelete: Cascade)

  @@index([authorId])
  @@index([recipientId])
  @@index([writtenAt])
  @@index([isPublished])
  @@map("letters")
}
